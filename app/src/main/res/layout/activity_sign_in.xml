<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A2E43"
    android:orientation="vertical"
    tools:context=".SignInController.Sign_in">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:text="Sign In"
                android:layout_gravity="center|right"
                android:gravity="center|right"
                android:textColor="#fff"
                android:textAllCaps="true"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_weight="1">
            <Button
                android:layout_width="73dp"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/reg_button"
                android:text="Sign Up"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textAllCaps="true"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:hint="Name"
            android:paddingLeft="20dp"
            android:textColorHint="@color/colorRegEditFieldText"
            android:background="@drawable/reg_edit_field"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textColorHint="@color/colorRegEditFieldText"
            android:background="@drawable/reg_edit_field"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textColorHint="@color/colorRegEditFieldText"
            android:background="@drawable/reg_edit_field"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/reg_button_continue"
            android:text="Continue"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:textColor="#fff"
            android:layout_marginTop="60dp"/>
    </LinearLayout>

</LinearLayout>